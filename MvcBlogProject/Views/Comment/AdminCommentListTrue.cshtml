@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentList";
    Layout = "~/Views/Shared/_Admin_Layout_.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">    
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="post">
                            <div class="user-block">
                                @if (item.AuthorID == null)
                                {
                                    <img class="img-circle img-bordered-sm" src="~/Images/user.png" alt="user image">
                                    <span class="username">

                                        <a href="#">@item.CommentMail ---  @item.Blog.BlogTitle</a>
                                    </span>
                                }
                                else
                                {
                                    <img class="img-circle img-bordered-sm" src="@item.Author.AuthorImage" alt="user image">
                                    <span class="username">                                        
                                        <a href="#">@item.Author.AuthorName @item.Author.AuthorSurname ---  @item.Blog.BlogTitle</a>
                                    </span>
                                }
                                <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                <span class="description">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>
                            </div>
                            <p>
                                @item.CommentText
                            </p>                                                           
                                <span class="float-right">
                                    <a href="/Comment/ChangeStatusToFalse/@item.CommentID" class="link-black text-sm">
                                        <i class="far fa-window-close mr-1"></i>Yorumu Kaldır
                                    </a>
                                </span>
                                <br />                                                      
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>


