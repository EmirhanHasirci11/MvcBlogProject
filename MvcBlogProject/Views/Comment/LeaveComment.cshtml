@model EntityLayer.Concrete.Comment
@{
    var author = (EntityLayer.Concrete.Author)(TempData.Peek("Author"));
}
<div class="comment-form-wrap pt-5">
    @if (author == null)
    {
        <a class="button badge-warning btn-sm " style="font-size:40px;" href="/Login/AuthorLogin">Yorum yapmak için giriş yapmalısınız</a>
    }
    else
    {
        <h3 class="mb-5">Yorum yazın...</h3>
        using (Html.BeginForm("LeaveComment", "Comment", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Yorumunuz *")
                @Html.TextAreaFor(x => x.CommentText, new { @PlaceHolder = "Yorum Bırakınız...", @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Yorum Yap." class="btn btn-primary">
            </div>
        }
    }
</div>
