@{
    var author = (EntityLayer.Concrete.Author)TempData.Peek("Author");
 }

            <div class="col-md-3">
                <div class="card card-primary card-outline">

                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="@author.AuthorImage"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center"><b>@author.AuthorName @author.AuthorSurname</b></h3>

                        <p class="text-muted text-center">@author.AuthorTitle</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Oluşturulan blog sayısı</b> <a class="float-right">1,322</a>
                            </li>
                            <li class="list-group-item">
                                <b>Bloglarına yapılan toplam yorum sayısı</b> <a class="float-right">543</a>
                            </li>
                            <li class="list-group-item">
                                <b>Yaptığı yorum sayısı</b> <a class="float-right">13,287</a>
                            </li>
                        </ul>

                        <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                    </div>
                </div>
            </div>
  