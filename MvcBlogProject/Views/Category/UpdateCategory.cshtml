@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_Admin_Layout_.cshtml";
}
<h2>Admin Kategori Düzenlem Sayfası</h2>
@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{<div class="form-group">
        @Html.HiddenFor(x => x.CategoryID)

        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Rengi")
        @Html.TextBoxFor(x => x.CategoryColor, new { @class = "form-control", @placeholder = "hex kodunu başında # olacak şekilde giriniz" })
        <br />
        @Html.Label("Kategori Açıklaması")
        @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-info">Güncelle</button>
    </div>


}

