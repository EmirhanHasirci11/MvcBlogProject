@model EntityLayer.Concrete.Blog

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Html.DisplayFor(x=>x.BlogImage)');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <span class="post-category text-white  mb-3" style="background-color:@Html.DisplayFor(x=>x.Category.CategoryColor)">@Html.DisplayFor(x=>x.Category.CategoryName)</span>
                    <h1 class="mb-4"><a href="#">@Html.DisplayFor(x=>x.BlogTitle)</a></h1>
                    <div class="post-meta align-items-center text-center">
                        <figure class="author-figure mb-0 mr-3 d-inline-block"><img src="@Html.DisplayFor(x=>x.Author.AuthorImage)" alt="Image" class="img-fluid"></figure>
                        <span class="d-inline-block mt-1">@ViewBag.nameSurname</span>
                        <span>&nbsp;-&nbsp; @(((DateTime)ViewBag.date).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>