@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "GetCommentByBlog";
    Layout = "~/Views/Shared/_Admin_Layout_.cshtml";
}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <section class="content">

            <div class="container-fluid">



                <!-- Timelime example  -->

                <div class="row">

                    <div class="col-md-12">

                        <!-- The time line -->

                        <div class="timeline">

                            @foreach (var item in Model)
                            {
                            <div class="time-label">
                                <span class="bg-cyan">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>                              
                            </div>                                                                
                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        @if (item.AuthorID == null)
                                        {

                                        <h3 class="timeline-header"><a href="#">@item.CommentMail</a></h3>
                                        }
                                        else
                                        {
                                    <h3 class="timeline-header" ><i class="fa fa-pen"><a href="#">@item.Author.AuthorName  @item.Author.AuthorSurname</a></i></h3>
                                            
                                        }
                                        <div class="timeline-body">
                                            @item.CommentText
                                        </div>
                                        <div class="timeline-footer">
                                            <a class="btn btn-primary btn-sm">Detaylar</a>
                                            <a class="btn btn-danger btn-sm">Kaldır</a>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- END timeline item -->

                        </div>

                    </div>

                    <!-- /.col -->

                </div>

            </div>

            <!-- /.timeline -->

        </section>

        <!-- /.content -->

    </div>

    <!-- ./wrapper -->

</body>

</html>

