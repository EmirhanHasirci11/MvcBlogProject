@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_Admin_Layout_.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                    {
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <input  type="hidden" name="AboutID" value="@item.AboutID"/>
                                <div class="form-group">
                                    <label for="inputName">Görsel 1</label>
                                    <input type="text"  name="AboutImage1" class="form-control" value="@item.AboutImage1">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Görsel 2</label>
                                    <input type="text"  name="AboutImage2" class="form-control" value="@item.AboutImage2">
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 1</label>
                                    <textarea  class="form-control" name="AboutContent1" rows="4">@item.AboutContent1</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 2</label>
                                    <textarea  name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>
                                </div>
                            }
                            <button type="submit" class="btn btn-info">Güncelle</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>