@model EntityLayer.Concrete.About

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_Admin_Layout_.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                    {
                        <div class="card-body">
                            
                            
                                @Html.HiddenFor(x=>x.AboutID)
                                <div class="form-group">
                                    <label for="inputName">Görsel 1</label>
                                    @Html.TextBoxFor(x=>x.AboutImage1,new {@class="form-control" })
                                    @Html.ValidationMessageFor(x => x.AboutImage1)
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Görsel 2</label>
                                    @Html.TextBoxFor(x => x.AboutImage2, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AboutImage2)
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 1</label>
                                    @Html.TextAreaFor(x => x.AboutContent1, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AboutContent1)
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 2</label>
                                    @Html.TextAreaFor(x => x.AboutContent2, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AboutContent2)
                                </div>
                            
                            <button type="submit" class="btn btn-info">Güncelle</button>
                            <a id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz')" class="btn btn-danger" href="/About/DeleteAbout/@Model.AboutID">Sil</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>