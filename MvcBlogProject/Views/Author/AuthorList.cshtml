@model IEnumerable<EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/_Admin_Layout_.cshtml";
}

<!DOCTYPE html>

<html>
<head>

    
    <style>

        .responsive {
            width: 100%;
            max-width: 200px;
            height: auto;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    
    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->

        <section class="content">

            <!-- Default box -->

            <div class="card card-solid">

                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {

                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">

                                <div class="card bg-light">

                                    <div class="card-header text-muted border-bottom-0">

                                        @item.AuthorTitle

                                    </div>

                                    <div class="card-body pt-0">

                                        <div class="row">

                                            <div class="col-7">

                                                <h2 class="lead"><b>@item.AuthorName @item.AuthorSurname</b></h2>

                                                <p class="text-muted text-sm"><b>Hakkında: </b>@item.AuthorAboutShort  </p>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">

                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span> Mail: @item.AuthorMail</li>



                                                </ul>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="@item.AuthorImage" alt=""  class="img-circle img-fluid responsive">

                                            </div>

                                        </div>

                                    </div>

                                    <div class="card-footer">

                                        <div class="text-right">

                                            <a href="#" class="btn btn-sm bg-teal">

                                                <i class="fas fa-comments">Yazarın Blogları</i>

                                            </a>

                                            <a href="/Author/EditAuthor/@item.AuthorID" class="btn btn-sm btn-primary">

                                                <i class="fas fa-user"></i> Profili Görüntüle

                                            </a>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        }

                    </div>

                </div>

            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->

</body>

</html>

