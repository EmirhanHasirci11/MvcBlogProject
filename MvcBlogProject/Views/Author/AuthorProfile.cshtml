@model EntityLayer.Concrete.Author
@{
    ViewBag.Title = "AuthorProfile";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/Images/about.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">@Model.AuthorName @Model.AuthorSurname</h1>
                    <p class="lead mb-4 text-white">@Model.AuthorTitle</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 order-md-2">
                <img src="@Model.AuthorImage" style="min-width:500px" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 mr-auto order-md-1">
                <h2>Ben Kimim</h2>
                <p>@Model.AuthorAbout</p>
                <a class="btn btn-warning" href="/Blog/BlogByAuthor/@Model.AuthorID">Diğer yazılarım</a>
            </div>

        </div>
    </div>
</div>

@Html.Action("AddMail", "MailSubscribe")
@Html.Action("Footer", "About")
